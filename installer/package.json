{
  "name": "wordpressify",
  "version": "0.5.0-15",
  "description": "Automate your WordPress development workflow.",
  "keywords": [
    "babel",
    "boilerplate",
    "build",
    "css",
    "cherry",
    "es6",
    "front-end",
